---
import { Image } from 'astro:assets';
interface Props {
	name: string;
	url: string;
  src: ImageMetadata | string;
}

const { name, url, src } = Astro.props;
---

<li class="list-none list-item bg-gray-100 text-gray-700 p-2 rounded">
  {typeof src === 'string' ?
    <Image src={src} alt={name} class="inline" width="16" height="16"/>
    : <Image src={src} alt={name} class="inline" width="16" height="16"/>
  }
	<a href={url}>
		<span>
			{name}
		</span>

	</a>
</li>
